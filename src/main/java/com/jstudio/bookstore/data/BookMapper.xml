<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.jstudio.bookstore.data.BookMapper">
    <resultMap  id="bookResultMap" type="com.jstudio.bookstore.domain.Book">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
    </resultMap>

    <select id="listAll" resultMap="bookResultMap">
		select * from t_book
	</select>

    <insert id="add">
	   insert into t_book(id, title) values(#{id},#{title})
	</insert>

</mapper>